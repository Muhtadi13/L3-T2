+thread_join(int id)
+{
+
+  // printf("%d iiiiiiii",id);
+ 
+  struct proc *pp;
+  int havethread;
+  struct proc *p = myproc();
+
+  acquire(&wait_lock);
+
+  for(;;){
+    // Scan through table looking for exited children.
+    havethread = 0;
+    for(pp = proc; pp < &proc[NPROC]; pp++){
+      if(pp->parent == p && pp->is_thread == 1 && id == pp->pid){
+        // make sure the child isn't still in exit() or swtch().
+        acquire(&pp->lock);
+
+        havethread = 1;
+        if(pp->state == ZOMBIE){
+          // Found one.
+          freeproc(pp);
+          release(&pp->lock);
+          release(&wait_lock);
+          return id;
+        }
+        release(&pp->lock);
+      }
+    }
+
+    // No point waiting if we don't have any children thread to wait for
+    if(!havethread || killed(p)){
+      release(&wait_lock);
+      return -1;
+    }
+    
+    // Wait for a child to exit.
+    sleep(p, &wait_lock);  //DOC: wait-sleep
+  }
